<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.scummvm" name="ScummVM" version="1.8.0" provider-name="Libretro">
    <requires>
        <import addon="game.libretro" version="1.0.0"/>
    </requires>
    <extension point="kodi.gameclient"
               library_android="libgame.libretro.scummvm.so"
               library_linux="game.libretro.scummvm.so"
               library_osx="game.libretro.scummvm.dylib"
               library_windx="game.libretro.scummvm.dll"
               library_wingl="game.libretro.scummvm.dll">
        <platforms></platforms>
        <extensions>scummvm|scum</extensions>
        <supports_vfs>false</supports_vfs>
        <supports_game_loop>true</supports_game_loop>
        <supports_standalone>true</supports_standalone>
        <supports_keyboard>true</supports_keyboard>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary lang="en">ScummVM v1.6.0</summary>
      <description>ScummVM is a collection of game engine recreations. Originally designed to play LucasArts adventure games that use the SCUMM system, it now also supports a variety of non-SCUMM games by companies like Revolution Software and Adventure Soft.

Icon credit: HarryBana (harrybana.deviantart.com)

License: GPLv2</description>
      <platform>all</platform>
      <nofanart>true</nofanart>
    </extension>
</addon>
