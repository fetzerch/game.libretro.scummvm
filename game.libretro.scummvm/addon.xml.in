<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.scummvm" name="ScummVM" version="1.9.0" provider-name="Libretro">
    <requires>
        <import addon="game.libretro" version="1.0.0"/>
    </requires>
    <extension point="kodi.gameclient"
               library_@PLATFORM@="@LIBRARY_FILENAME@">
        <platforms></platforms>
        <extensions>scummvm|scum</extensions>
        <supports_vfs>false</supports_vfs>
        <supports_standalone>true</supports_standalone>
        <supports_keyboard>true</supports_keyboard>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary lang="en">ScummVM v1.9.0</summary>
      <description>ScummVM is a collection of game engine recreations. ScummVM emulates several systems, including the SCUMM system for LucasArts adventure games.

Icon credit: HarryBana (harrybana.deviantart.com)</description>
      <license>GPL v2.0</license>
      <platform>@PLATFORM@</platform>
      <nofanart>true</nofanart>
    </extension>
</addon>
